@model IEnumerable<Assignment1.DAL.Models.Performance>

@{
    ViewData["Title"] = "ShowPerformances";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShowPerformances</h1>

<form action="form1"  method="post">
    <table>
        <tr>
            <td>Enter artist: </td>
            <td><input type="text" name="txtArtist" /></td>
        </tr>
        <tr>
            <td>Enter genre: </td>
            <td><input type="text" name="txtGenre" /></td>
        </tr>
        <tr>
            <td>Enter title: </td>
            <td><input type="text" name="txtTitle" /></td>
        </tr>
        <tr>
            <td>Enter date: </td>
            <td><input type="datetime" name="txtDate" /></td>
        </tr>
        <tr>
            <td>Enter number of tickets: </td>
            <td><input type="text" name="txtNoTickets" /></td>
        </tr>

        <tr>
            <td colspan="2"><input type="submit" value="Create a new Performance" /></td>
        </tr>
    </table>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PerformanceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrOfTickets)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PerformanceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrOfTickets)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.PerformanceId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.PerformanceId},new { onclick = "return confirm('Are you sure you want to delete this item?');" }) |
                @Html.ActionLink("New ticket", "NewTicket", new { id=item.PerformanceId }) |
                @Html.ActionLink("Export tickets", "ExportTickets", new { id=item.PerformanceId })

            </td>
        </tr>
}
    </tbody>
</table>
